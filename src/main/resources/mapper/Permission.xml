<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tuandai.shiro.dao.PermissionDAO">
    <resultMap id="permissionNames" type="java.lang.String"/>
    <select id="getPermissionsByName" parameterType="java.lang.String" resultMap="permissionNames">
        SELECT name FROM role_permission WHERE roleId in (SELECT id FROM user_role WHERE name=#{name})
    </select>
</mapper>